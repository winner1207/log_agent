# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# LLM 配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL_ID=deepseek-chat

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 钉钉机器人配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
DINGTALK_ACCESS_TOKEN=
DINGTALK_SECRET=
# 值班人员手机号，多个用逗号分隔，用于 P1/P2 级别告警 @
DINGTALK_ON_DUTY_MOBILES=

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 日志诊断配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 环境标识: dev / test / prod
LOG_ENVIRONMENT=dev

# 日志目录路径
# Linux: /var/log/myapp 或 /home/user/logs
# Windows: D:\logs 或 C:\Logs
LOG_DIRECTORY=/home/user/logs

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Agent 行为配置
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 0.0-1.0, 越小输出越确定，越大越随机
AGENT_TEMPERATURE=0.3

# ReAct 循环最大迭代次数
AGENT_MAX_ITERATIONS=15

# 是否启用告警缓冲
AGENT_ENABLE_ALERT_BUFFER=true

# 是否启用分级通知（邮件/钉钉）
AGENT_ENABLE_NOTIFICATIONS=true
